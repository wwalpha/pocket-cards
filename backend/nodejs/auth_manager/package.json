{
  "name": "auth-manager",
  "version": "1.0.2",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon ./src/index.ts dotenv_config_path=.env.dev",
    "build": "tsc -p tsconfig.build.json",
    "build:image": "yarn build && docker build -t pkc/auth_manager .",
    "start": "node index.js",
    "test": "jest"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/lodash": "^4.14.170",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.11",
    "dotenv": "^16.0.0",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "superagent": "^7.1.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.2.10",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@alphax/dynamodb": "^1.1.3",
    "amazon-cognito-identity-js": "^5.2.8",
    "aws-sdk": "^2.1102.0",
    "axios": "^0.26.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "winston": "^3.6.0"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "delay": 3,
    "ignore": [
      "node_modules/*"
    ],
    "execMap": {
      "ts": "ts-node -r tsconfig-paths/register -r dotenv/config"
    },
    "events": {
      "crash": "sh -c 'lsof -i :${PORT:-8080} -t | xargs kill'"
    }
  }
}