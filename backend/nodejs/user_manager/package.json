{
  "name": "user-manager",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon ./src/index.ts dotenv_config_path=.env.dev",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:image": "docker build -t pkc/user_manager .",
    "start": "node index.js",
    "test": "jest"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.272.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.169",
    "@types/morgan": "^1.9.3",
    "@types/node": "^15.3.0",
    "@types/supertest": "^2.0.12",
    "aws-sdk-client-mock": "^2.0.1",
    "dotenv": "^16.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.7",
    "superagent": "^7.1.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.6",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@alphax/dynamodb": "^1.2.7",
    "@aws-sdk/client-cognito-identity-provider": "^3.279.0",
    "@aws-sdk/client-ses": "^3.279.0",
    "axios": "^0.26.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "winston": "^3.6.0"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "delay": 3,
    "ignore": [
      "node_modules/*"
    ],
    "execMap": {
      "ts": "ts-node -r dotenv/config -r tsconfig-paths/register"
    },
    "events": {
      "crash": "sh -c 'lsof -i :${PORT:-8080} -t | xargs kill'"
    }
  }
}